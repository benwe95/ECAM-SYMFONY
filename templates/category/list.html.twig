{% extends 'base.html.twig' %}

{% block title %}List categories{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="show-list-categorys-container p-3 mt-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="show-category-title-container d-inline-block pl-3 align-middle">
                                <span class="show-category-title ">List categories</span>
                                <br>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="category-text">
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.wording }}</td>
                                        <td>
                                            <a href="{{ path('category_edit', {'id': category.id }) }}"class="btn btn-light">Edit</a>
                                            <a href="{{ path('category_del', {'id': category.id }) }}" class="btn btn-danger delete-category" data-id="{{ category.id }}">Delete</a>
                                        </td>
                                    </tr></br>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('category_add') }}"class="btn btn-light">Add</a>
    </div>

{% endblock %}