{% extends 'base.html.twig' %}

{% block title %}List Notes{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="show-list-notes-container p-3 mt-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="show-note-title-container d-inline-block pl-3 align-middle">
                                <span class="show-note-title ">List notes</span>
                                <br>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="note-text">
                                {% for note in notes %}
                                    <tr>
                                        <td>{{ note.title }}</td>
                                        <td>
                                            <a href="/note/{{ note.id }}" class="btn btn-dark">Show</a>
                                            <a href="/note/edit/{{ note.id }}" class="btn btn-light">Edit</a>
                                            <a href="#" class="btn btn-danger delete-note" data-id="{{ note.id }}">Delete</a>
                                        </td>
                                    </tr></br>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}