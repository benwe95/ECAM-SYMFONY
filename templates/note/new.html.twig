{% extends 'base.html.twig' %}

{% block title %}New Note{% endblock %}

{% block body %}

    <script>
        function wrapText(elementID, openTag, closeTag) {
            var textArea = $('#' + elementID);
            var len = textArea.val().length;
            var start = textArea[0].selectionStart;
            var end = textArea[0].selectionEnd;
            var selectedText = textArea.val().substring(start, end);
            var replacement = openTag + selectedText + closeTag;
            textArea.val(textArea.val().substring(0, start) + replacement +
                textArea.val().substring(end, len));
        }
    </script>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="show-note-container p-3 mt-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="show-note-title-container d-inline-block pl-3 align-middle">
                                <span class="show-note-title ">New note</span>
                                <br>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('note_list') }}"class="btn btn-light">Cancel</a>

    </div>

{% endblock %}