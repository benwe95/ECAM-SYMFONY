{% extends 'base.html.twig' %}

{% block title %}Read {{ note.title }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="show-note-container p-3 mt-4">
                    <div class="row">
                        <div class="col-sm-12">
                            {#<img class="show-note-img" src="{ asset('images/.jpeg') }"> #}
                            <div class="show-note-title-container d-inline-block pl-3 align-middle">
                                <span class="show-note-title ">{{ note.title }}</span>
                                <br>
                                <span class="align-left note-details">
                                    {#<img class="note-author-img rounded-circle" src="{{ asset('images/alien-profile.png') }}">#}
                                     </span>
                                <span class="pl-2 note-details"> Last update on {{ note.date|date('Y-m-d H:i') }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="note-text">
                                {{ note.content }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('note_list') }}"class="btn btn-light">Back</a>

    </div>

{% endblock %}